"""playeras"""
def make_shirt(talla, texto_para_imprimir):
    print("La talla de la playera es " + talla.title()+"Con el texto de " + texto_para_imprimir.title())
    
make_shirt('mediana', 'i <3 python')

def make_t_shirt(talla='grande', texto='i <3 python'):
    print("la playera es talla y " + talla + " el texto es " + texto+ ".")
    
make_t_shirt()

make_t_shirt(talla='mediana')

"""ciudad"""
def describe_city(ciudad='Salt Lake City', pais='Estados Unidos'):
    print(ciudad+ " esta en "+pais)
    
describe_city()
describe_city(ciudad='New York')
describe_city(ciudad='tokio', pais='Japon')

"""restaurante"""
class RESTAURANT():
    def __init__(self,restaurant_name,cuisine_type):
        self.restaurante_name = name
        self.cuisine_type= cuisine_type
    def describe_restaurant(self,descripcion):
        self.descripcion= descripcion
        print('El restaurante '+self.name.title()+descripcion)
    def open_restaurant(self,abierto):
        self.abierto= abierto
        print('el restaurante se encuentra '+abierto)
        
